<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="kr.co.tmon.appreview.dao.AverageRatingOfAppMapper">
	<resultMap type="AverageRatingOfAppModel" id="AverageRatingResult">
		<result property="appName" column="app_name" />
		<result property="corpCode" column="corp_code" />
		<result property="rating" column="rating" />
	</resultMap>
	
	<insert id="insertAverageRating" parameterType="AverageRatingOfAppModel">
		INSERT INTO
			app_review_ratings(app_name, corp_code, rating)
		VALUES
			(#{appName}, #{corpCode}, #{rating})
		ON DUPLICATE KEY UPDATE rating=#{rating}
	</insert>
	
	
</mapper>	