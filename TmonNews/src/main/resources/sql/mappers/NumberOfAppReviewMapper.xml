<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.tmon.appreview.dao.NumberOfAppReviewMapper">
	<resultMap type="NumberOfAppReviewModel" id="NumberOfAppReviewResult">
		<result property="numberOfTmonAppReview" column="tmon" />
		<result property="numberOfCoupangAppReview" column="coupang" />
		<result property="numberOfWemapAppReview" column="wemap" />
		<result property="numberOfTmonplusAppReview" column="tmonplus" />
	</resultMap>
	
	<insert id="updateNumberOfAppReview" parameterType="NumberOfAppReviewModel">
		UPDATE
			number_of_app_review
		SET
			tmon=#{numberOfTmonAppReview}, coupang=#{numberOfCoupangAppReview}, wemap=#{numberOfWemapAppReview}, tmonplus=#{numberOfTmonplusAppReview} 
	</insert>
	
	<select id="selectNumberOfAppReview" resultMap="NumberOfAppReviewResult">
		SELECT
			tmon, coupang, wemap, tmonplus
		FROM
			number_of_app_review
	</select>
</mapper>